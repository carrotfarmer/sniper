---
import type { CollectionEntry } from "astro:content";
import type { IElement } from "@/data/shared";
import { getFormattedDate } from "@/utils";

interface Props extends IElement {
	post: CollectionEntry<"post">;
}

const { post, as: Element = "div" } = Astro.props;
const date = new Date(post.data.publishDate);
const datetime = date.toISOString();
const postDate = getFormattedDate(date);
---

<time datetime={datetime} class="min-w-[120px] text-gray-500 font-extralight">{postDate}</time>
<Element>
	<a href={`/posts/${post.slug}`} class="cactus-link font-semibold" rel="prefetch">
		{post.data.title}
	</a>
</Element>
